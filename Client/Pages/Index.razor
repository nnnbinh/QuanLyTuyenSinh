@page "/"
@inject HttpClient Http
@inject ISinhvientrungtuyen Sinhvientrungtuyen
@inject NavigationManager NavigationManager
@attribute [Authorize]

<PageTitle>Tuyển sinh VIDO</PageTitle>

<MudText Typo="Typo.h5" >Biểu đồ thí sinh </MudText>
<MudChart ChartType="ChartType.Pie" InputData="@data" InputLabels="@label" Width="850" Height="350" LegendPosition="Position.Bottom"></MudChart>

@code{

    double[] data = new double[3];
    string[] label = { "Pending","Accepted","Rejected"};

    protected override async Task OnInitializedAsync()
    {
        await Sinhvientrungtuyen.GetChartData();
        if (Sinhvientrungtuyen != null)
        {
            data = Sinhvientrungtuyen.data;
        }

    }

}